{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mlvp",
  "version": "0.1.0",
  "identifier": "com.mlvp.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "mlvp",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "permissions": [
    "core:default",
    "http:default",
    {
      "identifier": "http:request",
      "allow": [
        {
          "url": "http://localhost:8765"
        },
        {
          "url": "http://127.0.0.1:8765"
        }
      ]
    }
  ],
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
